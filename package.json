{
  "name": "data-feed-status-bot",
  "type": "module",
  "version": "1.0.0",
  "description": "Send a notification to a telegram group when one of the data feeds is outdated",
  "main": "index.ts",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "node --no-warnings --enable-source-maps --loader ts-node/esm src/index.ts",
    "dev:watch": "nodemon --watch src/ -e ts --exec \"npm run dev\"",
    "lint": "prettier . --write",
    "lint:check": "prettier .",
    "test": "vitest",
    "build": "tsc",
    "docker:build": "docker build -t witnet/data-feed-status-bot ."
  },
  "author": "Other Plane Labs",
  "license": "MIT",
  "dependencies": {
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "node-telegram-bot-api": "^0.65.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/node-telegram-bot-api": "^0.64.6",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5.3.2",
    "vitest": "^1.4.0"
  }
}
